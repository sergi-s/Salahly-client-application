        "firebase-functions": "^3.18.0",
        "firebase-tools": "^11.0.1"
    },
    "devDependencies": {
        "@google-cloud/functions-framework": "^3.1.0",
        "eslint": "^8.9.0",
        "eslint-config-google": "^0.14.0",
        "firebase-functions-test": "^0.2.0"
    },
    "private": true
}
